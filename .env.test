# 测试环境变量配置
# 用于功能开关系统的测试

# 应用配置
VITE_APP_TITLE=ECR心理测评系统-测试环境

# API配置 - 测试环境
VITE_API_BASE_URL=http://localhost:3000

# 测试场景 1: 生产环境模拟 - 所有调试功能关闭
# VITE_ENABLE_DEBUG_MODE=false
# VITE_ENABLE_DEV_TOOLS=false
# VITE_ENABLE_CONSOLE_LOGGING=false
# VITE_ENABLE_TEST_FEATURES=false
# VITE_ENABLE_MOCK_DATA=false

# 测试场景 2: 开发环境模拟 - 调试功能开启
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_CONSOLE_LOGGING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# 测试功能开关
VITE_ENABLE_TEST_FEATURES=true
VITE_ENABLE_MOCK_DATA=true
VITE_ENABLE_BETA_FEATURES=true

# 支付功能 - 测试环境关闭
VITE_ENABLE_PAYMENT=false
VITE_ENABLE_STRIPE_PAYMENT=false

# 报告功能 - 测试环境开启
VITE_ENABLE_DETAILED_REPORT=true
VITE_ENABLE_REPORT_SHARING=true
VITE_ENABLE_REPORT_EXPORT=true

# 监控功能 - 测试环境关闭避免干扰
VITE_ENABLE_SENTRY_LOGGING=false
VITE_ENABLE_USER_TRACKING=false
VITE_ENABLE_ACCESS_LOGGING=false